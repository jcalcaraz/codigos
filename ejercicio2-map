  var r=0;
var g=0;
var b=0;
function setup() {
  createCanvas(400, 400);
}

function draw() {
  r = map(mouseX,0,400,0,255);
  g= map(mouseX,0,400,255,0);
  b= map(mouseX,0,400,255,0);
  background(r,g,b);
  fill(250,118,222);
  line(0,0,400,400);
  rectMode(CENTER);
  rect(200,200,63,63,0,20,0,20);
}
